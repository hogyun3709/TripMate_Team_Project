<div class="container">
  <div class="row">
    <div class="col offset-l3 l6 offset-m2 m8 s12">
      <h4 class="text-center">회원가입</h4>
      <div class="divider"></div>
      <br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <%= f.label :email, '이메일' %>
          <%= f.email_field :email, autofocus: true %>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">supervisor_account</i>
          <%= f.label :name, '이름' %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <i class="material-icons prefix">wc</i>
          <%= f.radio_button :sex, 'Male', class: "with-gap", checked: true %>
          <%= f.label :sex, 'Male', value: 'Male' %>
          <%= f.radio_button :sex, 'Female', class: "with-gap" %>
          <%= f.label :sex, 'Female', value: 'Female' %>
        </div>
        <br />
        <div class="input-field">
          <i class="material-icons prefix">lock_open</i>
          <% if @minimum_password_length %>
            <%= f.label :password, '비밀번호 (' + @minimum_password_length.to_s + '글자 이상 입력)' %><br>
          <% end %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">lock_outline</i>
          <%= f.label :password_confirmation, '비밀번호 재입력' %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
        <div class="actions">
          <%= button_tag(type: "submit", class: "waves-effect waves-light btn green lighten-1 wd100") do %>
            회원가입
          <% end %>
        </div>
      <% end %>
      <br>
    </div>
  </div>
</div>
