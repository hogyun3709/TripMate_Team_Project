<div class="container">
  <div class="row">
    <div class="col l9 m8 s12">
      <ul class="collection with-header">
        <li class="collection-header">
          <h4><%= @user.name %></h4>
        </li>
        <li class="collection-item valign-wrapper"><i class="tiny material-icons">email</i>&nbsp;&nbsp;<%= @user.email %></li>
        <li class="collection-item valign-wrapper"><i class="tiny material-icons">grade</i>&nbsp;&nbsp;<%= @user.name %></li>
        <li class="collection-item valign-wrapper"><i class="tiny material-icons">supervisor_account</i>&nbsp;&nbsp;<%= @user.sex %></li>
        <li class="collection-item valign-wrapper"><i class="tiny material-icons">home</i>&nbsp;&nbsp;<%= @user.address %></li>
        <li class="collection-item valign-wrapper"><i class="tiny material-icons">phone_iphone</i>&nbsp;&nbsp;<%= @user.tele_phone %></li>
        <li class="collection-item valign-wrapper"><i class="tiny material-icons">directions_bike</i>&nbsp;&nbsp;<%= @user.habbit %></li>
        <li class="collection-item valign-wrapper"><i class="tiny material-icons">accessibility</i>&nbsp;&nbsp;<%= @user.strong_point %></li>
      </ul>
      <% if @user == current_user %>
        <%= link_to "프로필 수정하기", edit_user_registration_path, class: "waves-effect waves-light btn green lighten-1 wd100" %>
      <% end %>
      <br>
      <br>
    </div>
  </div>
</div>
